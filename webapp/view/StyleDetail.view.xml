<mvc:View controllerName="zui3derp.controller.StyleDetail" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:u="sap.uxap"
    xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" class="sapUiSizeCompact" xmlns:tnt="sap.tnt"
    xmlns:c="zui3derp.control" xmlns:t="sap.ui.table">
    <Page showHeader="false">
        <ObjectHeader id="objectHeader" responsive="true" fullScreenOptimized="true" intro="{i18n>CurrentVersion}: 1" backgroundDesign="Solid" icon="sap-icon://blank-tag-2"
		        title="{headerData>/Styleno}" number="{headerData>/Statuscd}" numberUnit="{i18n>Status}" numberState="{= ${headerData>/Statuscd} === 'CMP' ? 'Success' : ${headerData>/Statuscd} === 'CRT' ? 'Error' : 'Warning'}">
            <attributes>
                <ObjectAttribute title="{i18n>CREATEDBY}" text="{headerData>/Createdby}"/>
                <ObjectAttribute title="{i18n>CREATEDDT}" text="{headerData>/Createddt}"/>
                <ObjectAttribute title="{i18n>UPDATEDBY}" text="{headerData>/Updatedby}"/>
                <ObjectAttribute title="{i18n>UPDATEDDT}" text="{headerData>/Updateddt}"/>
            </attributes>
        </ObjectHeader>
         <Panel expandable="true" expanded="true" width="auto" class="sapUiSizeCompact whiteBackground">
            <headerToolbar>
                <Toolbar id="TB1" height="3rem" style="Clear">
                    <Title text="Header" />
                    <ToolbarSpacer />
                    <Button icon="sap-icon://save"/>
                    <Button icon="sap-icon://edit" />
                    <Button icon="sap-icon://delete" />
                </Toolbar>
            </headerToolbar>
            <f:Form id="StyleHeaderForm1" editable="true" class="sapUiNoContentPadding">
                <f:layout>
                    <f:ResponsiveGridLayout columnsXL="4" columnsL="3" columnsM="3"/>
                </f:layout>
                <f:formContainers>
                    <f:FormContainer ariaLabelledBy="Grp1" class="sapUiNoContentPadding" >
                        <f:formElements>
                            <f:FormElement label="{i18n>STYLECD}" >
                                <f:fields>
                                    <Input value="{headerData>/Stylecd}">
                                    </Input>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>DESC1}">
                                <f:fields>
                                    <Input value="{headerData>/Desc1}"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                    <f:FormContainer ariaLabelledBy="Grp2">
                        <f:formElements>
                            <f:FormElement label="{i18n>SEASONCD}">
                                <f:fields>
                                    <!-- <Input value="{headerData>/Seasoncd}"/> -->
                                    <ComboBox id="seasonCB" items="{ path: '/results', sorter: { path: 'Seasoncd' } }" selectedKey="{headerData>/Seasoncd}"
                                        showSecondaryValues="true" filterSecondaryValues= "true">
                                        <core:ListItem key="{Seasoncd}" text="{Desc1}" additionalText = "{Yr}"/>
                                    </ComboBox>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>FTYSTYLE}">
                                <f:fields>
                                    <Input value="{headerData>/Ftystyle}"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
            <f:Form id="StyleHeaderForm2" editable="true">
                <f:layout>
                    <f:ResponsiveGridLayout columnsXL="4" columnsL="3" columnsM="3" singleContainerFullSize="false" />  
                </f:layout>
                <f:formContainers>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="{i18n>PRODTYP}">
                                <f:fields>
                                    <ComboBox id="prodTypeCB" items="{ path: '/results', sorter: { path: 'ProdTyp' } }" selectedKey="{headerData>/Prodtyp}" 
                                        showSecondaryValues="true" filterSecondaryValues= "true">
                                        <core:ListItem key="{ProdTyp}" text="{Desc1}" additionalText = "{ProdTyp}"/>
                                    </ComboBox>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>STYLECAT}">
                                <f:fields>
                                    <Input value="{headerData>/Stylecat}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>CUSTPRDTYP}">
                                <f:fields>
                                    <Input value="{headerData>/Custprdtyp}"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="{i18n>SALESGRP}">
                                <f:fields>
                                    <!-- <Input value="{headerData>/Salesgrp}"/> -->
                                    <ComboBox id="salesGroupCB" items="{ path: '/results', sorter: { path: 'SalesGrp' } }" selectedKey="{headerData>/Salesgrp}" 
                                        showSecondaryValues="true" filterSecondaryValues= "true">
                                        <core:ListItem key="{SalesGrp}" text="{Desc1}" additionalText = "{SalesGrp}"/>
                                    </ComboBox>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>PRODGRP}">
                                <f:fields>
                                    <Input value="{headerData>/Prodgrp}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>STYLEGRP}">
                                <f:fields>
                                    <Input value="{headerData>/Stylegrp}"/>
                                </f:fields>
                            </f:FormElement>
                            
                        </f:formElements>
                    </f:FormContainer>
                    <f:FormContainer ariaLabelledBy="Grp3">
                        <f:formElements>
                            <f:FormElement label="{i18n>CUSTGRP}">
                                <f:fields>
                                    <!-- <Input value="{headerData>/Custgrp}"/> -->
                                    <ComboBox id="customerGroupCB" items="{ path: '/results', sorter: { path: 'CustGrp' } }" selectedKey="{headerData>/Custgrp}" 
                                        showSecondaryValues="true" filterSecondaryValues= "true">
                                        <core:ListItem key="{CustGrp}" text="{Desc1}" additionalText = "{CustGrp}"/>
                                    </ComboBox>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>SOLDTOCUST}">
                                <f:fields>
                                    <Input value="{headerData>/Soldtocust}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>SIZEGRP}">
                                <f:fields>
                                    <Input value="{headerData>/Sizegrp}"/>
                                </f:fields>
                            </f:FormElement>
                            
                        </f:formElements>
                    </f:FormContainer>
                    <f:FormContainer ariaLabelledBy="Grp4">
                        <f:formElements>
                            <f:FormElement label="{i18n>UOM}">
                                <f:fields>
                                    <Input value="{headerData>/Uom}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>FABRICATION}">
                                <f:fields>
                                    <Input value="{headerData>/Fabrctn}"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
            <f:Form id="StyleHeaderForm3" editable="true">
                <f:layout>
                    <f:ResponsiveGridLayout columnsXL="4" columnsL="3" columnsM="3" singleContainerFullSize="false" />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="{i18n>REMARKS}">
                                <f:fields>
                                    <TextArea placeholder="Enter Text" growing="true" growingMaxLines="7" width="100%"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                        <f:layoutData>
                            <l:GridData span="XL8 L8 M8 S3" />
                        </f:layoutData>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>

        </Panel>
        <Panel expandable="true" expanded="false" width="auto" class="sapUiSizeCompact whiteBackground">
            <headerToolbar>
                <Toolbar height="3rem" style="Clear">
                    <Title text="Detail" />
                </Toolbar>
            </headerToolbar>
            <IconTabBar id="idIconTabBarMulti" expanded="{device>/isNoPhone}" tabDensityMode="Compact" expandable="false" class="sapUiNoContentPadding">
                <items>
                    <IconTabFilter icon="sap-icon://hint" text="Attributes">
                        <Panel expandable="true" expanded="false" width="80%" class="sapUiSmallMargin sapUiSizeCompact whiteBackground">
                            <headerToolbar>
                                <Toolbar height="3rem" style="Clear">
                                    <Label text="General Attributes"/>
                                    <ToolbarSpacer />
                                    <Button icon="sap-icon://add" press="addGeneralAttr"/>
                                    <Button icon="sap-icon://edit" press="saveSettings"/>
                                    <Button icon="sap-icon://save"/>
                                    <Button icon="sap-icon://delete" />
                                </Toolbar>
                            </headerToolbar>
                            <c:DynamicTable id="generalTable" rows="{DataModel>/results}" enableColumnReordering="false" minAutoRowCount="10" visibleRowCountMode="Auto" class="sapUiSizeCompact">
                                <c:columns>
                                    <t:Column width="11rem" filterProperty="Attribtype">
                                        <Label text="Attribute Type" />
                                        <t:template>
                                            <Input value="{DataModel>Attribtype}"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column width="11rem" filterProperty="Attribcd">
                                        <Label text="Attribute Code" />
                                        <t:template>
                                            <Input value="{DataModel>Attribcd}"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column width="11rem" filterProperty="Desc1">
                                        <Label text="Description" />
                                        <t:template>
                                            <Input value="{DataModel>Desc1}"/>
                                        </t:template>
                                    </t:Column>
                                </c:columns>
                            </c:DynamicTable>
                        </Panel>
                        <Panel expandable="true" expanded="false" width="80%" class="sapUiSmallMargin sapUiSizeCompact whiteBackground">
                            <headerToolbar>
                                <Toolbar height="3rem" style="Clear">
                                    <Label text="Colors" />
                                    <ToolbarSpacer />
                                    <Button icon="sap-icon://add"/>
                                    <Button icon="sap-icon://edit" />
                                    <Button icon="sap-icon://save"/>
                                    <Button icon="sap-icon://delete" />
                                </Toolbar>
                            </headerToolbar>
                            <c:DynamicTable id="colorsTable" rows="{DataModel>/results}" enableColumnReordering="false" minAutoRowCount="5" visibleRowCountMode="Auto" class="sapUiSizeCompact">
                                <c:columns>
                                    <t:Column width="11rem" filterProperty="Attribcd">
                                        <Label text="Color Code" />
                                        <t:template>
                                            <Input value="{DataModel>Attribcd}"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column width="11rem" filterProperty="Desc1">
                                        <Label text="Description" />
                                        <t:template>
                                            <Input value="{DataModel>Desc1}"/>
                                        </t:template>
                                    </t:Column>
                                </c:columns>
                            </c:DynamicTable>
                        </Panel>
                        <Panel expandable="true" expanded="false" width="80%" class="sapUiSmallMargin sapUiSizeCompact whiteBackground">
                            <headerToolbar>
                                <Toolbar height="3rem" style="Clear">
                                    <Label text="Sizes" />
                                    <ToolbarSpacer />
                                    <Button icon="sap-icon://add"/>
                                    <Button icon="sap-icon://edit" />
                                    <Button icon="sap-icon://save"/>
                                    <Button icon="sap-icon://delete" />
                                </Toolbar>
                            </headerToolbar>
                            <c:DynamicTable id="sizesTable" rows="{DataModel>/results}" enableColumnReordering="false" minAutoRowCount="8" visibleRowCountMode="Auto" class="sapUiSizeCompact">
                                <c:columns>
                                    <t:Column width="11rem" filterProperty="Attribgrp">
                                        <Label text="Size Range" />
                                        <t:template>
                                            <Input value="{DataModel>Attribgrp}"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column width="11rem" filterProperty="Attribcd">
                                        <Label text="Size Code" />
                                        <t:template>
                                            <Input value="{DataModel>Attribcd}"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column width="11rem">
                                        <Label text="Base Ind" />
                                        <t:template>
                                            <CheckBox/>
                                        </t:template>
                                    </t:Column>
                                </c:columns>
                            </c:DynamicTable>
                        </Panel>

                        <Panel expandable="true" expanded="false" width="80%" class="sapUiSmallMargin sapUiSizeCompact whiteBackground">
                            <headerToolbar>
                                <Toolbar height="3rem" style="Clear">
                                    <Label text="Processes" />
                                    <ToolbarSpacer />
                                    <Button icon="sap-icon://add"/>
                                    <Button icon="sap-icon://edit" />
                                    <Button icon="sap-icon://save"/>
                                    <Button icon="sap-icon://delete" />
                                </Toolbar>
                            </headerToolbar>

                            <!-- PROCESSES -->
                            <c:DynamicTable id="processesTable" rows="{DataModel>/results}" enableColumnReordering="false" minAutoRowCount="8" visibleRowCountMode="Auto" class="sapUiSizeCompact">
                                <c:columns>
                                    <t:Column width="4rem" filterProperty="Seqno">
                                        <Label text="Seq." />
                                        <t:template>
                                            <Input value="{DataModel>Seqno}"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column width="11rem" filterProperty="Processcd">
                                        <Label text="Process" />
                                        <t:template>
                                            <Input value="{DataModel>Processcd}"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column width="11rem" filterProperty="Vastyp">
                                        <Label text="VAS Type" />
                                        <t:template>
                                            <Input value="{DataModel>Vastyp}"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column width="11rem" filterProperty="Leadtime">
                                        <Label text="Lead Time" />
                                        <t:template>
                                            <Input value="{DataModel>Leadtime}"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column width="11rem" filterProperty="Attribtyp">
                                        <Label text="Attr. Group" />
                                        <t:template>
                                            <Input value="{DataModel>Attribtyp}"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column width="11rem" filterProperty="Attribcd">
                                        <Label text="Attribute" />
                                        <t:template>
                                            <Input value="{DataModel>Attribcd}"/>
                                        </t:template>
                                    </t:Column>
                                </c:columns>
                            </c:DynamicTable>
                        </Panel>
                    </IconTabFilter>

                    <!-- VERSIONS -->
                    <IconTabFilter icon="sap-icon://notes" text="Versions">
                        <Panel expandable="true" expanded="true" width="80%" class="sapUiNoContentPadding sapUiSizeCompact whiteBackground">
                            <headerToolbar>
                                <Toolbar height="3rem" style="Clear">
                                    <Title text="Versions" />
                                    <ToolbarSpacer />
                                    <Button icon="sap-icon://add"/>
                                    <Button icon="sap-icon://edit" />
                                    <Button icon="sap-icon://save"/>
                                    <Button icon="sap-icon://delete" />
                                </Toolbar>
                            </headerToolbar>
                            <c:DynamicTable id="versionsTable" rows="{DataModel>/results}" enableColumnReordering="false" selectionMode="Single" 
                                visibleRowCountMode="Auto" minAutoRowCount="3" class="sapUiSizeCompact">
                                <c:columns>
                                    <t:Column width="8rem" filterType="" filterProperty="Verno" sortProperty="Verno">
                                        <Label text=""/>
                                        <t:template>
                                            <Button text="Maintain" icon="sap-icon://detail-view">

                                            </Button>
                                        </t:template>
                                    </t:Column>
                                    <t:Column width="5rem" filterType="" filterProperty="Verno" sortProperty="Verno">
                                        <Label text="Version"/>
                                        <t:template>
                                            <Text text="{DataModel>Verno}" textAlign="End"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column width="6rem" hAlign="Center" sortProperty="Currentver">
                                        <Label text="Status" />
                                        <t:template>
                                            <tnt:InfoLabel id="il8" text="{= ${DataModel>Currentver} === '1' ? 'Current' : ' ' }" colorScheme="{= ${DataModel>Currentver} === '1' ? 8 : 7 }" displayOnly= "true"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column width="15rem" filterProperty="Desc1" sortProperty="Desc1">
                                        <Label text="Description" />
                                        <t:template>
                                            <Input value="{DataModel>Desc1}"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column width="15rem" filterProperty="Desc2" sortProperty="Desc2">
                                        <Label text="Description" />
                                        <t:template>
                                            <Input value="{DataModel>Desc2}"/>
                                        </t:template>
                                    </t:Column>
                                </c:columns>
                            </c:DynamicTable>
                        </Panel>

                        <Panel expandable="false" expanded="true" width="100%" class="sapUiNoContentPadding sapUiTinyMarginTop sapUiSizeCompact whiteBackground">
                            <ObjectHeader title="VERSTY-001 desc" responsive="true" intro="Version 1"/>
                            <IconTabBar headerMode="Inline" upperCase="true" class="sapUiResponsiveContentPadding">
                                <items>
                                    <IconTabFilter text="Version Attributes">
                                        <Toolbar height="3rem" style="Clear">
                                            <Label text="Version Attributes"/>
                                            <ToolbarSpacer />
                                            <Button icon="sap-icon://add"/>
                                            <Button icon="sap-icon://edit" />
                                            <Button icon="sap-icon://save"/>
                                            <Button icon="sap-icon://delete" />
                                        </Toolbar>
                                        <c:DynamicTable id="versionAttrTable" rows="{DataModel>/results}" enableColumnReordering="false"  
                                            visibleRowCountMode="Auto" minAutoRowCount="5" class="sapUiSizeCompact">
                                            <c:columns>
                                                <t:Column width="11rem" filterType="" filterProperty="Attribtyp" sortProperty="Attribtyp">
                                                    <Label text="Attribute Type"/>
                                                    <t:template>
                                                        <Input value="{DataModel>Attribtyp}"/>
                                                    </t:template>
                                                </t:Column>
                                                <t:Column width="11rem" filterProperty="Attribcd" sortProperty="Attribcd">
                                                    <Label text="Attribute Code" />
                                                    <t:template>
                                                        <Input value="{DataModel>Attribcd}"/>
                                                    </t:template>
                                                </t:Column>
                                                <t:Column width="11rem" filterProperty="Desc1" sortProperty="Desc1">
                                                    <Label text="Description" />
                                                    <t:template>
                                                        <Input value="{DataModel>Desc1}"/>
                                                    </t:template>
                                                </t:Column>
                                                <t:Column width="11rem" filterProperty="Attribval" sortProperty="Attribval">
                                                    <Label text="Value" />
                                                    <t:template>
                                                        <Input value="{DataModel>Attribval}"/>
                                                    </t:template>
                                                </t:Column>
                                                <t:Column width="11rem" filterProperty="Valunit" sortProperty="Valunit">
                                                    <Label text="UOM" />
                                                    <t:template>
                                                        <Input value="{DataModel>Valunit}"/>
                                                    </t:template>
                                                </t:Column>
                                            </c:columns>
                                        </c:DynamicTable>
                                    </IconTabFilter>
                                    <IconTabFilter text="BOM by GMC" >
                                        <Toolbar height="3rem" style="Clear">
                                            <Label text="BOM by GMC"/>
                                            <ToolbarSpacer />
                                            <Button text="Get Components"/>
                                            <Button text="RMC"/>
                                            <Button icon="sap-icon://add"/>
                                            <Button icon="sap-icon://edit" />
                                            <Button icon="sap-icon://save"/>
                                            <Button icon="sap-icon://delete" />
                                        </Toolbar>
                                        <!-- <c:DynamicTable id="bomGMCTable" class="sapUiSizeCompact" showColumnVisibilityMenu="true">
                                        </c:DynamicTable> -->
                                        <c:DynamicTreeTable id="bomGMCTable" class="sapUiSizeCompact" showColumnVisibilityMenu="true">
                                        </c:DynamicTreeTable>
                                    </IconTabFilter>
                                    <IconTabFilter text="BOM by UV">
                                        <Toolbar height="3rem" style="Clear">
                                            <Label text="BOM by UV"/>
                                            <ToolbarSpacer />
                                            <Button icon="sap-icon://add"/>
                                            <Button icon="sap-icon://edit" />
                                            <Button icon="sap-icon://save"/>
                                            <Button icon="sap-icon://delete" />
                                        </Toolbar>
                                        <c:DynamicTable id="bomUVTable" class="sapUiSizeCompact" showColumnVisibilityMenu="true">
                                        </c:DynamicTable>
                                    </IconTabFilter>
                                    <IconTabFilter text="Detailed BOM">
                                        <Text text="Detailed BOM ..." />
                                    </IconTabFilter>
                                    <IconTabFilter text="Material List">
                                        <Text text="Material List ..." />
                                    </IconTabFilter>
                                </items>
                            </IconTabBar>
                        </Panel>
                    </IconTabFilter>
                    <IconTabFilter
                        icon="sap-icon://attachment" text="Attachments">
                        <!-- <Text text="Attachments ..." /> -->
                        <Panel expandable="true" expanded="false" width="100%" class="sapUiSmallMargin sapUiSizeCompact whiteBackground">
                            <headerToolbar>
                                <Toolbar height="3rem" style="Clear">
                                    <Label text="Attachments" />
                                    <ToolbarSpacer />
                                    <Button icon="sap-icon://add"/>
                                    <Button icon="sap-icon://edit" />
                                    <Button icon="sap-icon://save"/>
                                    <Button icon="sap-icon://delete" />
                                </Toolbar>
                            </headerToolbar>
                            <c:DynamicTable id="attachmentsTable" rows="{DataModel>/results}"  class="sapUiSizeCompact">
                                <c:columns>
                                </c:columns>
                            </c:DynamicTable>
                        </Panel>
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </Panel>
        <VBox height="300px"/>
    </Page>
</mvc:View>