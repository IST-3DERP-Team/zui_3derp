         <VBox>
            <Toolbar id="TB1" class="sapUiSmallMargin">
                <ToolbarSpacer />
                <Button icon="sap-icon://save"/>
                <Button icon="sap-icon://edit" />
                <Button icon="sap-icon://delete" />
            </Toolbar>
            <f:Form id="StyleHeaderForm1" editable="true" class="sapUiNoContentPadding">
                <f:layout>
                    <f:ResponsiveGridLayout columnsXL="4" columnsL="4" columnsM="4"/>
                </f:layout>
                <f:formContainers>
                    <f:FormContainer ariaLabelledBy="Grp1" class="sapUiNoContentPadding">
                        <f:formElements>
                            <f:FormElement label="Style Code">
                                <f:fields>
                                    <Input value="{SupplierName}">
                                    
                                    </Input>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Style Description">
                                <f:fields>
                                    <Input value="{Street}"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                        <f:layoutData>
                            <l:GridData span="XL6 L6 M6 S3" />
                        </f:layoutData>
                    </f:FormContainer>
                    <f:FormContainer ariaLabelledBy="Grp2">
                        <f:formElements>
                            <!-- <f:FormElement label="Syle No.">
                                <f:fields>
                                    <Input value="{Url}" type="Url"/>
                                </f:fields>
                            </f:FormElement> -->
                            <f:FormElement label="Season">
                                <f:fields>
                                    <Input value="{Twitter}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Factory Style">
                                <f:fields>
                                    <Input value="{Url}" type="Url"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                    <!-- <f:FormContainer ariaLabelledBy="Grp3">
                        <f:formElements>
                            
                            <f:FormElement label="Status">
                                <f:fields>
                                    <Input value="{Twitter}"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer> -->
                </f:formContainers>
            </f:Form>
