<mvc:View controllerName="zui3derp.controller.StyleDetail" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:u="sap.uxap"
    xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" class="sapUiSizeCompact" xmlns:tnt="sap.tnt"
    xmlns:c="zui3derp.control" xmlns:t="sap.ui.table">
    <Page showHeader="false">
        <ObjectHeader id="objectHeader" responsive="true" fullScreenOptimized="true" intro="{i18n>CurrentVersion}: 1" backgroundDesign="Solid" icon="sap-icon://blank-tag-2"
		        title="{headerData>/Styleno}" number="{headerData>/Statuscd}" numberUnit="{i18n>Status}" numberState="{= ${headerData>/Statuscd} === 'CMP' ? 'Success' : ${headerData>/Statuscd} === 'CRT' ? 'Error' : 'Warning'}">
            <attributes>
                <ObjectAttribute title="{i18n>CREATEDBY}" text="{headerData>/Createdby}"/>
                <ObjectAttribute title="{i18n>CREATEDDT}" text="{headerData>/Createddt}"/>
                <ObjectAttribute title="{i18n>UPDATEDBY}" text="{headerData>/Updatedby}"/>
                <ObjectAttribute title="{i18n>UPDATEDDT}" text="{headerData>/Updateddt}"/>
            </attributes>
            <!-- <statuses>
                <ObjectStatus title="Status" text="CRT" state="Error"/>
            </statuses> -->
        </ObjectHeader>
         <Panel expandable="true" expanded="true" width="auto" class="sapUiSizeCompact whiteBackground">
            <headerToolbar>
                <Toolbar id="TB1" height="3rem" style="Clear">
                    <Title text="Header" />
                    <ToolbarSpacer />
                    <Button icon="sap-icon://save"/>
                    <Button icon="sap-icon://edit" />
                    <Button icon="sap-icon://delete" />
                </Toolbar>
            </headerToolbar>
            <f:Form id="StyleHeaderForm1" editable="true" class="sapUiNoContentPadding">
                <f:layout>
                    <f:ResponsiveGridLayout columnsXL="4" columnsL="3" columnsM="3"/>
                </f:layout>
                <f:formContainers>
                    <f:FormContainer ariaLabelledBy="Grp1" class="sapUiNoContentPadding" >
                        <f:formElements>
                            <f:FormElement label="{i18n>STYLECD}" >
                                <f:fields>
                                    <Input value="{headerData>/Stylecd}">
                                    </Input>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>DESC1}">
                                <f:fields>
                                    <Input value="{headerData>/Desc1}"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                    <f:FormContainer ariaLabelledBy="Grp2">
                        <f:formElements>
                            <f:FormElement label="{i18n>SEASONCD}">
                                <f:fields>
                                    <Input value=""/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>FTYSTYLE}">
                                <f:fields>
                                    <Input value=""/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
            <f:Form id="StyleHeaderForm2" editable="true">
                <f:layout>
                    <f:ResponsiveGridLayout columnsXL="4" columnsL="3" columnsM="3" singleContainerFullSize="false" />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="{i18n>PRODTYP}">
                                <f:fields>
                                    <Input value=""/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>STYLECAT}">
                                <f:fields>
                                    <Input value=""/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>CUSTPRDTYP}">
                                <f:fields>
                                    <Input value=""/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="{i18n>SALESGRP}">
                                <f:fields>
                                    <Input value=""/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>PRODGRP}">
                                <f:fields>
                                    <Input value=""/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>STYLEGRP}">
                                <f:fields>
                                    <Input value=""/>
                                </f:fields>
                            </f:FormElement>
                            
                        </f:formElements>
                    </f:FormContainer>
                    <f:FormContainer ariaLabelledBy="Grp3">
                        <f:formElements>
                            <f:FormElement label="{i18n>CUSTGRP}">
                                <f:fields>
                                    <Input value=""/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>SOLDTOCUST}">
                                <f:fields>
                                    <Input value=""/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>SIZEGRP}">
                                <f:fields>
                                    <Input value=""/>
                                </f:fields>
                            </f:FormElement>
                            
                        </f:formElements>
                    </f:FormContainer>
                    <f:FormContainer ariaLabelledBy="Grp4">
                        <f:formElements>
                            <f:FormElement label="{i18n>UOM}">
                                <f:fields>
                                    <Input value=""/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>FABRICATION}">
                                <f:fields>
                                    <Input value=""/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
            <f:Form id="StyleHeaderForm3" editable="true">
                <f:layout>
                    <f:ResponsiveGridLayout columnsXL="4" columnsL="3" columnsM="3" singleContainerFullSize="false" />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="{i18n>REMARKS}">
                                <f:fields>
                                    <TextArea placeholder="Enter Text" growing="true" growingMaxLines="7" width="100%"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                        <f:layoutData>
                            <l:GridData span="XL8 L8 M8 S3" />
                        </f:layoutData>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>

        </Panel>
        <Panel expandable="true" expanded="false" width="auto" class="sapUiSizeCompact whiteBackground">
            <headerToolbar>
                <Toolbar height="3rem" style="Clear">
                    <Title text="Detail" />
                </Toolbar>
            </headerToolbar>
            <IconTabBar id="idIconTabBarMulti" expanded="{device>/isNoPhone}" tabDensityMode="Compact" expandable="false">
                <items>
                    <IconTabFilter icon="sap-icon://hint" text="Attributes">
                        <Panel expandable="true" expanded="false" width="50%" class="sapUiSmallMargin sapUiSizeCompact whiteBackground">
                            <headerToolbar>
                                <Toolbar height="3rem" style="Clear">
                                    <Label text="General Attributes"/>
                                    <ToolbarSpacer />
                                    <Button icon="sap-icon://add" press="addGeneralAttr"/>
                                    <Button icon="sap-icon://edit" press="saveSettings"/>
                                    <Button icon="sap-icon://save"/>
                                    <Button icon="sap-icon://delete" />
                                </Toolbar>
                            </headerToolbar>
                            <!-- <c:DynamicTable id="GeneralAttTable" rows="{GeneralData>/results}"  class="sapUiSizeCompact"  mode="MultiSelect">
                                <c:columns>
                                    <Column><Label design="Bold" text="Attribute Type"/></Column>
                                    <Column><Label design="Bold" text="Attribute Code"/></Column>
                                    <Column><Label design="Bold" text="Description"/></Column>
                                    <Column><Label design="Bold" text="Value"/></Column>
                                    <Column><Label design="Bold" text="UOM"/></Column>
                                </c:columns>
                                <c:items>
                                    <ColumnListItem>
                                        <cells>
                                            <Input value="{GeneralData>Attribtype}" width="100%"></Input>
                                            <Input value="{GeneralData>Attribcd}" width="100%"></Input>
                                            <Input value="{GeneralData>Desc1}" width="100%"></Input>
                                            <Input value="{GeneralData>Attribval}" width="100%"></Input>
                                            <Input value="{GeneralData>Valunit}" width="100%"></Input>
                                        </cells>
                                    </ColumnListItem>
                                </c:items>
                            </c:DynamicTable> -->
                            <c:DynamicTable id="generalTable" rows="{DataModel>/results}"  class="sapUiSizeCompact">
                                <c:columns>
                                    <t:Column width="11rem" filterProperty="Attribtype">
                                        <Label text="Attribute Type" />
                                        <t:template>
                                            <Input value="{DataModel>Attribtype}"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column width="11rem">
                                        <Label text="Attribute Code" />
                                        <t:template>
                                            <Input value="{DataModel>Attribcd}"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column width="11rem">
                                        <Label text="Description" />
                                        <t:template>
                                            <Input value="{DataModel>Desc1}"/>
                                        </t:template>
                                    </t:Column>
                                </c:columns>
                            </c:DynamicTable>
                        </Panel>
                        <Panel expandable="true" expanded="false" width="50%" class="sapUiSmallMargin sapUiSizeCompact whiteBackground">
                            <headerToolbar>
                                <Toolbar height="3rem" style="Clear">
                                    <Label text="Colors" />
                                    <ToolbarSpacer />
                                    <Button icon="sap-icon://add"/>
                                    <Button icon="sap-icon://edit" />
                                    <Button icon="sap-icon://save"/>
                                    <Button icon="sap-icon://delete" />
                                </Toolbar>
                            </headerToolbar>
                            <c:DynamicTable id="colorsTable" rows="{DataModel>/results}"  class="sapUiSizeCompact">
                                <c:columns>
                                    
                                </c:columns>
                            </c:DynamicTable>
                        </Panel>
                        <Panel expandable="true" expanded="false" width="50%" class="sapUiSmallMargin sapUiSizeCompact whiteBackground">
                            <headerToolbar>
                                <Toolbar height="3rem" style="Clear">
                                    <Label text="Sizes" />
                                    <ToolbarSpacer />
                                    <Button icon="sap-icon://add"/>
                                    <Button icon="sap-icon://edit" />
                                    <Button icon="sap-icon://save"/>
                                    <Button icon="sap-icon://delete" />
                                </Toolbar>
                            </headerToolbar>
                            <c:DynamicTable id="sizesTable" rows="{DataModel>/results}"  class="sapUiSizeCompact">
                                <c:columns>
                                    
                                </c:columns>
                            </c:DynamicTable>
                        </Panel>
                        <Panel expandable="true" expanded="false" width="50%" class="sapUiSmallMargin sapUiSizeCompact whiteBackground">
                            <headerToolbar>
                                <Toolbar height="3rem" style="Clear">
                                    <Label text="Processes" />
                                    <ToolbarSpacer />
                                    <Button icon="sap-icon://add"/>
                                    <Button icon="sap-icon://edit" />
                                    <Button icon="sap-icon://save"/>
                                    <Button icon="sap-icon://delete" />
                                </Toolbar>
                            </headerToolbar>
                            <c:DynamicTable id="processesTable" rows="{DataModel>/results}"  class="sapUiSizeCompact">
                                <c:columns>
                                    
                                </c:columns>
                            </c:DynamicTable>
                        </Panel>
                    </IconTabFilter>
                    <IconTabFilter icon="sap-icon://notes" text="Versions">
                        <!-- <Text text="Versions ..." /> -->
                        <Panel expandable="true" expanded="false" width="50%" class="sapUiSmallMargin sapUiSizeCompact whiteBackground">
                            <headerToolbar>
                                <Toolbar height="3rem" style="Clear">
                                    <Label text="Versions" />
                                    <ToolbarSpacer />
                                    <Button icon="sap-icon://add"/>
                                    <Button icon="sap-icon://edit" />
                                    <Button icon="sap-icon://save"/>
                                    <Button icon="sap-icon://delete" />
                                </Toolbar>
                            </headerToolbar>
                            <c:DynamicTable id="versionsTable" rows="{DataModel>/results}"  class="sapUiSizeCompact">
                                <c:columns>
                                    
                                </c:columns>
                            </c:DynamicTable>
                        </Panel>
                    </IconTabFilter>
                    <IconTabFilter
                        icon="sap-icon://attachment" text="Attachments">
                        <!-- <Text text="Attachments ..." /> -->
                        <Panel expandable="true" expanded="false" width="50%" class="sapUiSmallMargin sapUiSizeCompact whiteBackground">
                            <headerToolbar>
                                <Toolbar height="3rem" style="Clear">
                                    <Label text="Attachments" />
                                    <ToolbarSpacer />
                                    <Button icon="sap-icon://add"/>
                                    <Button icon="sap-icon://edit" />
                                    <Button icon="sap-icon://save"/>
                                    <Button icon="sap-icon://delete" />
                                </Toolbar>
                            </headerToolbar>
                            <c:DynamicTable id="attachmentsTable" rows="{DataModel>/results}"  class="sapUiSizeCompact">
                                <c:columns>
                                    
                                </c:columns>
                            </c:DynamicTable>
                        </Panel>
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </Panel>
        <VBox height="300px"/>
    </Page>
</mvc:View>