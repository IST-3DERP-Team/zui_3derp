        <VBox class="sapUiSmallMargin"> -->
            <f:Form id="StyleHeaderForm2" editable="true">
                <f:layout>
                    <f:ResponsiveGridLayout columnsXL="4" columnsL="3" columnsM="3" singleContainerFullSize="false" />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="Product Type">
                                <f:fields>
                                    <Input value="{SupplierName}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Style Category">
                                <f:fields>
                                    <Input value="{Street}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Cust Product Type">
                                <f:fields>
                                    <Input value="{Street}"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="Sales Group">
                                <f:fields>
                                    <Input value="{SupplierName}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Product Group">
                                <f:fields>
                                    <Input value="{Street}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Style Group">
                                <f:fields>
                                    <Input value="{Street}"/>
                                </f:fields>
                            </f:FormElement>
                            
                        </f:formElements>
                    </f:FormContainer>
                    <f:FormContainer ariaLabelledBy="Grp3">
                        <f:formElements>
                            <f:FormElement label="Customer Group">
                                <f:fields>
                                    <Input value="{SupplierName}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Sold-to Customer">
                                <f:fields>
                                    <Input value="{Street}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Size Group">
                                <f:fields>
                                    <Input value="{Street}"/>
                                </f:fields>
                            </f:FormElement>
                            
                        </f:formElements>
                    </f:FormContainer>
                    <f:FormContainer ariaLabelledBy="Grp4">
                        <f:formElements>
                            <f:FormElement label="UOM">
                                <f:fields>
                                    <Input value="{Street}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Fabrication">
                                <f:fields>
                                    <Input value="{Street}"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
            <f:Form id="StyleHeaderForm3" editable="true">
                <f:layout>
                    <f:ResponsiveGridLayout columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="false" />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="Remarks">
                                <f:fields>
                                    <TextArea placeholder="Enter Text" growing="true" growingMaxLines="7" width="100%"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </VBox>
        <IconTabBar id="idIconTabBarMulti" expanded="{device>/isNoPhone}" class="sapUiResponsiveContentPadding" tabDensityMode="Compact" expandable="false">
            <items>
                <IconTabFilter icon="sap-icon://hint" text="Attributes">
                    <VBox>
