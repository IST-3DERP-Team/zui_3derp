    <Page showHeader="false">
        <ObjectHeader
		id="oh1"
		responsive="true"
		fullScreenOptimized="true"
		intro="Current Version: 1"
		title="Style VERSTY-001"
		number="CMT"
		numberUnit="STATUS"
		numberState="Success"
		backgroundDesign="Translucent">
		<attributes>
			<ObjectAttribute title="Created By" text="EMALLARI"/>
            <ObjectAttribute title="Created Date" text="06/22/2022"/>
            <ObjectAttribute title="Updated By" text="EMALLARI"/>
            <ObjectAttribute title="Updated Date" text="06/22/2022"/>
        </attributes>
		<!-- <statuses>
			<ObjectStatus title="Status" text="CRT" state="Error"/>
