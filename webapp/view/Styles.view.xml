                    </smartfilterbar:defaultFilterValues> -->
                </smartfilterbar:ControlConfiguration>
            </smartfilterbar:controlConfiguration>
            <smartfilterbar:controlConfiguration>
                <smartfilterbar:ControlConfiguration key="STYLENO" groupId="_ADVANCED" label="{i18n>STYLENO}">
                    <!-- <smartfilterbar:defaultFilterValues>
                        <smartfilterbar:SelectOption operator="EQ" low="1000"></smartfilterbar:SelectOption>
                    </smartfilterbar:defaultFilterValues> -->
                </smartfilterbar:ControlConfiguration>
            </smartfilterbar:controlConfiguration>
        </smartfilterbar:SmartFilterBar>

