<mvc:View xmlns:layout="sap.ui.layout" controllerName="zui3derp.controller.Styles" xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:c="zui3derp.control" xmlns:core="sap.ui.core" xmlns:plugins="sap.ui.table.plugins" xmlns:fb="sap.ui.comp.filterbar" >
    <Page showHeader="false">
      
        <HBox class="whiteBackground">
            <Title class="sapUiSmallMarginBegin sapUiTinyMarginTop" titleStyle="H4" text="Manage Styles"/>
        </HBox>
      
        <fb:FilterBar reset="onReset" search="onSearch" useToolbar="false" showFilterConfiguration="false">
          <fb:filterGroupItems>
            <fb:FilterGroupItem groupName="G1" groupTitle="Filter" name="F1" label="{i18n>SBUFilter}" visibleInFilterBar="true">
              <fb:control>
                <ComboBox id="filterSBU" items="{ path: '/results', sorter: { path: 'Sbu' } }">
                    <core:Item key="{Sbu}" text="{Sbu}" />
                </ComboBox>
              </fb:control>				
            </fb:FilterGroupItem>

            <fb:FilterGroupItem groupName="G1" groupTitle="Filter" name="F2" label="{i18n>SalesGroupFilter}" visibleInFilterBar="true">
              <fb:control>
                <ComboBox id="filterSalesGroup" items="{ path: '/results', sorter: { path: 'SalesGrp' } }">
                    <core:ListItem key="{SalesGrp}" text="{SalesGrp}"/>
                </ComboBox>
              </fb:control>				
            </fb:FilterGroupItem>				

            <fb:FilterGroupItem groupName="G1" groupTitle="Filter" name="F3" label="{i18n>CustomerGroupFilter}" visibleInFilterBar="true">
              <fb:control>
                <ComboBox id="filterCustomerGroup" items="{ path: '/results', sorter: { path: 'CustGrp' } }">
                    <core:ListItem key="{CustGrp}" text="{CustGrp}"/>
                </ComboBox>
              </fb:control>				
            </fb:FilterGroupItem>

            <fb:FilterGroupItem groupName="G1" groupTitle="Filter" name="F4" label="{i18n>SeasonFilter}" visibleInFilterBar="true">
              <fb:control>
                <ComboBox id="filterSeason" items="{ path: '/results', sorter: { path: 'Seasoncd' } }" showSecondaryValues= "true">
                    <core:ListItem key="{Seasoncd}" text="{Desc1}" additionalText = "{Yr}"/>
                </ComboBox>
              </fb:control>				
            </fb:FilterGroupItem>			

            <fb:FilterGroupItem groupName="G1" groupTitle="Filter" name="F5" label="{i18n>ProductTypeFilter}" visibleInFilterBar="true">
              <fb:control>
                <ComboBox id="filterProductType" items="{ path: '/results', sorter: { path: 'ProdTyp' } }">
                    <core:ListItem key="{ProdTyp}" text="{Desc1}"/>
                </ComboBox>
              </fb:control>				
            </fb:FilterGroupItem>					 
          </fb:filterGroupItems>				
	        </fb:FilterBar>
	    
        <!-- <layout:Grid containerQuery="true" class="sapUiSmallMarginTop" hSpacing="0" defaultSpan="XL2 L2 M6 S12">
            <layout:content> -->
            <layout:HorizontalLayout class="sapUiResponsiveContentPadding">
                <GenericTag text="{i18n>forecast}" design="StatusIconHidden" status="Warning" class="sapUiSmallMarginBottom tag">
					<ObjectNumber emphasized="true" number="5000" state="Warning"/>
				</GenericTag>
                <GenericTag text="{i18n>order}" design="StatusIconHidden" status="Information" class="sapUiSmallMarginBottom tag">
					<ObjectNumber emphasized="true" number="4500" state="Information"/>
				</GenericTag>
                <GenericTag text="{i18n>shipped}" design="StatusIconHidden" status="Success" class="sapUiSmallMarginBottom tag">
					<ObjectNumber emphasized="true" number="2000" state="Success"/>
				</GenericTag>
            </layout:HorizontalLayout>
            <!-- </layout:content>
        </layout:Grid> -->
        
        <Toolbar id="tableToolbar">
            <Title text="10 Styles"/>
            <ToolbarSpacer/>
            <SearchField width="30%" placeholder="Search"/>
            <Button icon="sap-icon://search"/>
			      <Button icon="sap-icon://add" >
              <layoutData>
                  <ToolbarLayoutData shrinkable="true"/>
              </layoutData>
            </Button>
            <Button icon="sap-icon://copy" >
              <layoutData>
                  <ToolbarLayoutData shrinkable="true"/>
              </layoutData>
            </Button>
            <Button icon="sap-icon://upload" >
              <layoutData>
                  <ToolbarLayoutData shrinkable="true"/>
              </layoutData>
            </Button>
            <Button icon="sap-icon://action-settings" press="onPersoButtonPressed">
              <layoutData>
                  <ToolbarLayoutData shrinkable="true"/>
              </layoutData>
            </Button>
        </Toolbar>
       
        <Panel class="sapUiTinyMarginTop">
            <ScrollContainer width="100%" horizontal="true" vertical="true" focusable="true">
            <!--         <Table id="idMyTable"  inset="false" growing="true" growingScrollToLoad="true" alternateRowColors="true"> -->
            <!-- Our code in the controller goes here -->
            <!--         </Table>     -->
                <c:DynamicTable id="styleDynTable" class="sapUiSizeCompact">
                </c:DynamicTable>
            </ScrollContainer>
        </Panel>

    </Page>
</mvc:View>
