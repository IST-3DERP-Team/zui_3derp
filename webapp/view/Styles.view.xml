            </smartfilterbar:controlConfiguration>
            <smartfilterbar:controlConfiguration>
                <smartfilterbar:ControlConfiguration id="filterCustomerGroup" key="CUSTGRP" groupId="_BASIC" label="{i18n>CustomerGroupFilter}" controlType="dropDownList" displayBehaviour="idAndDescription"
