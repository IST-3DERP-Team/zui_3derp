                    </smartfilterbar:defaultFilterValues> -->
                </smartfilterbar:ControlConfiguration>
            </smartfilterbar:controlConfiguration>
            <smartfilterbar:controlConfiguration>
                <smartfilterbar:ControlConfiguration id="filterProductType" key="PRODTYP" groupId="_BASIC" label="{i18n>ProductTypeFilter}" controlType="dropDownList" displayBehaviour="descriptionAndId"
