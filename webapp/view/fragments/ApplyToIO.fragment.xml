<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" class="sapUiSizeCompact" xmlns:tnt="sap.tnt" xmlns:c="zuiio2.control" xmlns:t="sap.ui.table" xmlns:t2="sap.m.Table">
    <Dialog title="Apply to IO" xmlns:c="zui3derp.control" xmlns:t="sap.ui.table" xmlns:tnt="sap.tnt" contentHeight="90%" contentWidth="100%"
    escapeHandler=".onCancelApplytoIO" afterClose=".onCancelApplytoIO">
        <Panel width="100%" height="100%" class="sapUiNoContentPadding">
            <VBox id="vbInDlvHdr" fitContainer="true">
            <t:Table id="applyToIOHdrTab" 
                   
                    class="sapUiSizeCompact" 
                    showColumnVisibilityMenu="true" 
                    enableColumnFreeze="true" 
                    enableCellFilter="false" 
                    selectionMode="MultiToggle" 
                    selectionBehavior="RowSelector" 
                    alternateRowColors="true">
                <!-- <t:extension>
                    <Toolbar>
                        <ToolbarSpacer />
                        <SearchField id="searchFieldInfoRec" placeholder="Filter" value="" search="filterGlobally" width="15rem" />
                    </Toolbar>
                </t:extension> -->
            </t:Table>
            <IconTabBar id="itbDetail" expanded="{device>/isNoPhone}" expandable="false" class="designSection2" select="onSelectTab" headerBackgroundDesign="Solid" stretchContentHeight="true" applyContentPadding="false">
                    <items>
                        <IconTabFilter text="{ddtext>/DETAILS}">
                            <t:Table
                                id="tblDlvDet"
                                class="tablePadding"
                                rows="{mdlMainDlvDet>/results}"
                                visibleRowCountMode="Auto"
                                minAutoRowCount ="1"
                                showColumnVisibilityMenu="true"
                                enableColumnFreeze="true"
                                enableCellFilter="false"
                                selectionMode="None"
                                
                                firstVisibleRowChanged="onFirstVisibleRowChanged"
                                cellClick="onCellClick"
                                sort="onSorted"
                                filter="onFilter"
                                columnFreeze="onColumnUpdated"
                                columnMove="onColumnUpdated"
                                columnResize="onColumnUpdated"
                                columnSelect="onColumnUpdated"
                                columnVisibility="onColumnUpdated"
                                rowSelectionChange="onRowSelectionChangeDlvDtl"
                            >
                                <t:extension>
                                    <OverflowToolbar>
                                        <Text text="{ui>/rowCounttblDlvDet} {ddtext>/ROWS}" />
                                        <ToolbarSpacer />
                                        <Button id="btnRefreshIDDDtl" icon="sap-icon://refresh" text="{ddtext>/REFRESH}" press="onRefreshMrpDtl" visible="false" />
                                        <Button id="btnFullScreenDtl"  icon="sap-icon://full-screen" press="onTableResize" tooltip="{ddtext>/FULLSCREEN}" visible="{= ${ui>/fullscreen} === true ? false : true}" >
                                            <customData>
                                                <core:CustomData key="Max" value="1" />
                                                <core:CustomData key="TableId" value="tblDlvDet" />
                                                <core:CustomData key="ButtonIdSuffix" value="Dtl" />
                                            </customData>
                                        </Button>
                                        <Button id="btnExitFullScreenDtl" icon="sap-icon://exit-full-screen" press="onTableResize" tooltip="{ddtext>/EXITFULLSCREEN}" visible="{ui>/fullscreen}" >
                                            <customData>
                                                <core:CustomData key="Max" value="0" />
                                                <core:CustomData key="TableId" value="tblDlvDet" />
                                                <core:CustomData key="ButtonIdSuffix" value="Dtl" />
                                            </customData>
                                        </Button>
                                        <Button id="btnTabLayoutIDDtl" icon="sap-icon://grid" tooltip="{ddtext>/SAVELAYOUT}" press="onSaveTableLayout('tblDlvDet')" visible="true" />
                                    </OverflowToolbar>
                                </t:extension>
                                <t:layoutData>
                                    <FlexItemData growFactor="1" baseSize="0%" />
                                </t:layoutData>
                            </t:Table>
                        </IconTabFilter>
                         
                    </items>
                    <layoutData>
                        <FlexItemData growFactor="1" baseSize="0%" />
                    </layoutData>
                </IconTabBar>
</VBox>
        </Panel>
        <buttons>
            <Button id="btnINFNRSubmit" text="{i18n>Submit}" press="onfragmentCreateInfoRec" tooltip="Submit" visible="true" />
            <Button id="btnINFNRCancel" text="{i18n>Cancel}" press="onCancelApplytoIO" tooltip="Cancel" visible="true" />
            <Button id="btnINFNRClose" text="{i18n>Close}" press="onCloseApplytoIO" tooltip="Close" visible="false" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
