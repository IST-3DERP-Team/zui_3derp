<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<Dialog title="Create new version" xmlns:c="zui3derp.control" xmlns:t="sap.ui.table" xmlns:tnt="sap.tnt">
		<Panel>
			<f:Form editable="true" class="sapUiNoContentPadding">
                <f:layout>
                    <f:ResponsiveGridLayout columnsXL="12" columnsL="12" columnsM="12"/>
                </f:layout>
                <f:formContainers>
                    <f:FormContainer ariaLabelledBy="Grp3">
                        <f:formElements>
                            <f:FormElement label="Description (en)">
                                <f:fields>
                                    <Input id="newVersionDesc1"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Description (cn)">
                                <f:fields>
                                    <Input id="newVersionDesc2"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement>
                                <f:fields>
                                    <CheckBox id="newVersionCurrent" text="Set as Current" selected="true" />
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
		</Panel>
		<buttons>
			<Button text="Save" press="onSaveNewVersion"/>
			<Button text="Cancel" press="onCancelNewVersion"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>