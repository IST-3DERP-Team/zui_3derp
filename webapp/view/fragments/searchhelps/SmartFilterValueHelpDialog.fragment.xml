<core:FragmentDefinition
	xmlns="sap.ui.comp.valuehelpdialog"
	xmlns:m="sap.m"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:core="sap.ui.core">
	<ValueHelpDialog 
		title="Sales Group"
		ok=".onCustomSmartFilterValueHelpOkPress"
		cancel=".onCustomSmartFilterValueHelpCancelPress"
		afterClose=".onCustomSmartFilterValueHelpAfterClose"
		supportRanges="true"
		key="SalesGrp"
		descriptionKey="Desc1"
	>
		<filterBar>
			<fb:FilterBar advancedMode="true" search=".onFilterBarSearch">
				<fb:filterGroupItems>
					<fb:FilterGroupItem 
						groupName="__$INTERNAL$"
						name="SalesGrp"
						label="Sales Group"
						visibleInFilterBar="true">
						<fb:control>
							<m:Input name="SalesGrp" />
						</fb:control>
					</fb:FilterGroupItem>
					<fb:FilterGroupItem 
						groupName="__$INTERNAL$"
						name="Desc1"
						label="Description"
						visibleInFilterBar="true"
					>
						<fb:control>
							<m:Input name="Description" />
						</fb:control>
					</fb:FilterGroupItem>
				</fb:filterGroupItems>
			</fb:FilterBar>
		</filterBar>
	</ValueHelpDialog>
</core:FragmentDefinition>
