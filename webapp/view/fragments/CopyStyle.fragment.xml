<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<Dialog title="Copy Style" contentWidth="75%">
		<Panel>
			<f:Form id="StyleHeaderForm1" editable="true" class="sapUiNoContentPadding">
                <f:layout>
                    <f:ResponsiveGridLayout columnsXL="12" columnsL="12" columnsM="12"/>
                </f:layout>
                <f:formContainers>
                    <f:FormContainer ariaLabelledBy="Grp1">
                        <f:formElements>
                            <f:FormElement label="Source Style Code">
                                <f:fields>
                                    <Text text="G206SM01SSCN CLS MDL4"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Source Season">
                                <f:fields>
                                    <Text text="SPRING 2021"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                        <f:layoutData>
                            <l:GridData span="XL5 L5 M5 S5" />
                        </f:layoutData>
                    </f:FormContainer>
                    
                    <f:FormContainer ariaLabelledBy="Grp3">
                        <f:formElements>
                            <f:FormElement label="New Style Code">
                                <f:fields>
                                    <Input value="{Twitter}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="New Season">
                                <f:fields>
                                    <Input value="{Url}" type="Url"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                        <f:layoutData>
                            <l:GridData span="XL5 L5 M5 S5" />
                        </f:layoutData>
                    </f:FormContainer>
                
                    <f:FormContainer ariaLabelledBy="Grp2">
                        <f:formElements>
                            <f:FormElement>
                                <f:fields>
                                    <CheckBox text="Color" selected="true" />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement>
                                <f:fields>
                                    <CheckBox text="BOM" selected="true" />
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                        <f:layoutData>
                            <l:GridData span="XL2 L2 M2 S2" />
                        </f:layoutData>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
		</Panel>
		<buttons>
			<Button text="Save" press="onSaveCopyStyle"/>
			<Button text="Cancel" press="onCancelCopyStyle"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>