<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" class="sapUiSizeCompact" xmlns:tnt="sap.tnt"
    xmlns:c="zui3derp.control" xmlns:t="sap.ui.table">
    <Toolbar height="3rem" style="Clear">
        <Label text="Detailed BOM"/>
        <ToolbarSpacer />
        <!-- <Button icon="sap-icon://save" text="Save"/>
        <Button icon="sap-icon://add"/>
        <Button icon="sap-icon://delete"/>
        <Button icon="sap-icon://edit"/> -->
        <Button icon="sap-icon://excel-attachment" press="onExportExcel"  tooltip="Download to Excel">
            <customData>
            <core:CustomData key="TableName" value="bomDetailedTable"/>
            </customData>
            <layoutData>
                <ToolbarLayoutData shrinkable="true"/>
            </layoutData>
        </Button>
    </Toolbar>
    <c:DynamicTreeTable id="bomDetailedTable" class="sapUiSizeCompact" showColumnVisibilityMenu="true" rows="{path:'DataModel>/results', parameters: {arrayNames:['items']}}">
        <t:Column width="10rem" filterType="" filterProperty="Attribtyp" sortProperty="Attribtyp">
            <Label text="BOM Item"/>
            <t:template>
                <Text text="{DataModel>Bomitem}"/>
            </t:template>
        </t:Column>
        <t:Column width="7rem" filterType="" filterProperty="Attribtyp" sortProperty="Attribtyp">
            <Label text="BOM Item Type"/>
            <t:template>
                <Text text="{DataModel>Bomitmtyp}"/>
            </t:template>
        </t:Column>
        <t:Column width="7rem" filterType="" filterProperty="Attribtyp" sortProperty="Attribtyp">
            <Label text="Style"/>
            <t:template>
                <Text text="{DataModel>Bomstyle}"/>
            </t:template>
        </t:Column>
        <t:Column width="7rem" filterType="" filterProperty="Attribtyp" sortProperty="Attribtyp">
            <Label text="Style Version"/>
            <t:template>
                <Text text="{DataModel>Bomstylver}"/>
            </t:template>
        </t:Column>
        <t:Column width="7rem" filterType="" filterProperty="Attribtyp" sortProperty="Attribtyp">
            <Label text="Part Code"/>
            <t:template>
                <Text text="{DataModel>Partcd}"/>
            </t:template>
        </t:Column>
        <t:Column width="7rem" filterType="" filterProperty="Attribtyp" sortProperty="Attribtyp">
            <Label text="Part Description"/>
            <t:template>
                <Text text="{DataModel>Partdesc}"/>
            </t:template>
        </t:Column>
        <t:Column width="7rem" filterType="" filterProperty="Attribtyp" sortProperty="Attribtyp">
            <Label text="Part Count"/>
            <t:template>
                <Text text="{DataModel>Partcnt}"/>
            </t:template>
        </t:Column>
        <t:Column width="7rem" filterType="" filterProperty="Attribtyp" sortProperty="Attribtyp">
            <Label text="Usage Class"/>
            <t:template>
                <Text text="{DataModel>Usgcls}"/>
            </t:template>
        </t:Column>
        <t:Column width="7rem" filterType="" filterProperty="Attribtyp" sortProperty="Attribtyp">
            <Label text="Customer Style"/>
            <t:template>
                <Text text="{DataModel>Custstyle}"/>
            </t:template>
        </t:Column>
        <t:Column width="7rem" filterType="" filterProperty="Attribtyp" sortProperty="Attribtyp">
            <Label text="Process"/>
            <t:template>
                <Text text="{DataModel>Processcd}"/>
            </t:template>
        </t:Column>
        <t:Column width="7rem" filterType="" filterProperty="Attribtyp" sortProperty="Attribtyp">
            <Label text="Color"/>
            <t:template>
                <Text text="{DataModel>Color}"/>
            </t:template>
        </t:Column>
        <t:Column width="7rem" filterType="" filterProperty="Attribtyp" sortProperty="Attribtyp">
            <Label text="Size"/>
            <t:template>
                <Text text="{DataModel>Sizes}"/>
            </t:template>
        </t:Column>
        <t:Column width="7rem" filterType="" filterProperty="Attribtyp" sortProperty="Attribtyp">
            <Label text="Destination"/>
            <t:template>
                <Text text="{DataModel>Dest}"/>
            </t:template>
        </t:Column>
        <t:Column width="7rem" filterType="" filterProperty="Attribtyp" sortProperty="Attribtyp">
            <Label text="Mat. Type"/>
            <t:template>
                <Text text="{DataModel>Mattyp}"/>
            </t:template>
        </t:Column>
        <t:Column width="7rem" filterType="" filterProperty="Attribtyp" sortProperty="Attribtyp">
            <Label text="GMC"/>
            <t:template>
                <Text text="{DataModel>Gmc}"/>
            </t:template>
        </t:Column>
        <t:Column width="7rem" filterType="" filterProperty="Attribtyp" sortProperty="Attribtyp">
            <Label text="Material"/>
            <t:template>
                <Text text="{DataModel>Matno}"/>
            </t:template>
        </t:Column>
        <t:Column width="7rem" filterType="" filterProperty="Attribtyp" sortProperty="Attribtyp">
            <Label text="Consump Per"/>
            <t:template>
                <Text text="{DataModel>Consump}"/>
            </t:template>
        </t:Column>
        <t:Column width="7rem" filterType="" filterProperty="Attribtyp" sortProperty="Attribtyp">
            <Label text="Per"/>
            <t:template>
                <Text text="{DataModel>Per}"/>
            </t:template>
        </t:Column>
        <t:Column width="7rem" filterType="" filterProperty="Attribtyp" sortProperty="Attribtyp">
            <Label text="UOM"/>
            <t:template>
                <Text text="{DataModel>Entryuom}"/>
            </t:template>
        </t:Column>
        <t:Column width="7rem" filterType="" filterProperty="Attribtyp" sortProperty="Attribtyp">
            <Label text="Wastage"/>
            <t:template>
                <Text text="{DataModel>Wastage}"/>
            </t:template>
        </t:Column>
        <t:Column width="7rem" filterType="" filterProperty="Attribtyp" sortProperty="Attribtyp">
            <Label text="Computed Consumption"/>
            <t:template>
                <Text text="{DataModel>Comconsump}"/>
            </t:template>
        </t:Column>
        <t:Column width="7rem" filterType="" filterProperty="Attribtyp" sortProperty="Attribtyp">
            <Label text="Consumption"/>
            <t:template>
                <Text text="{DataModel>Consump}"/>
            </t:template>
        </t:Column>
    </c:DynamicTreeTable>
</core:FragmentDefinition>            