<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" class="sapUiSizeCompact" xmlns:tnt="sap.tnt" xmlns:c="zui3derp.control" xmlns:t="sap.ui.table">
    <!-- <Panel expandable="true" expanded="false" width="80%" class="sapUiSizeCompact">
    
        <headerToolbar>
            <Toolbar height="2rem" style="Clear">
                <Label text="{i18n>Sizes}" />
            </Toolbar>
        </headerToolbar> -->
    <VBox fitContainer="true" class="sapUiTinyMargin">
        <Toolbar height="2rem" style="Clear">
            <ToolbarSpacer />
            <Button id="btnSizeSave" type="Ghost" icon="sap-icon://save" tooltip="{i18n>Savesizeattributes}" press="onSaveSizeTable" visible="false" />
            <Button id="btnSizeEdit" type="Ghost" icon="sap-icon://edit" tooltip="{i18n>Editsizeattributes}" press="setSizeEditMode" visible="true" />
            <Button id="btnSizeCancel" type="Ghost" icon="sap-icon://decline" tooltip="{i18n>Canceledit}" press="cancelSizeEdit" visible="false" />
        </Toolbar>

        <MessageStrip id="SizesMessageStrip" text="" showIcon="true" showCloseButton="true" class="sapUiMediumMarginBottom" type="Error" visible="false" />

        <!-- Sizes Table -->
        <c:DynamicTable id="sizesTable" 
            rows="{DataModel>/results}" 
            enableColumnReordering="true" 
            enableColumnFreeze="true"
            showColumnVisibilityMenu="true"
            class="sapUiSizeCompact" 
            visibleRowCountMode="Auto" 
            selectionMode="None">
            <c:columns>
                <t:Column name="ATTRIBSEQ" width="5rem" filterProperty="Attribseq" sortProperty="Attribseq">
                    <Label text="{i18n>Seq}" />
                    <t:template>
                        <Text text="{DataModel>Attribseq}" tooltip="{DataModel>Attribseq}" />
                    </t:template>
                </t:Column>
                <!-- <t:Column width="11rem" filterProperty="Attribgrp">
                    <Label text="{i18n>SizeRange}" />
                    <t:template>
                        <Input value="{DataModel>Attribgrp}" editable="false" />
                    </t:template>
                </t:Column> -->
                <t:Column width="11rem" filterProperty="Attribcd" sortProperty="Attribcd">
                    <Label text="{i18n>SizeCode}" />
                    <t:template>
                        <Input value="{DataModel>Attribcd}" editable="false" tooltip="{DataModel>Attribcd}"  />
                    </t:template>
                </t:Column>
                <t:Column width="11rem" filterProperty="Baseind" sortProperty="Baseind" hAlign="Center">
                    <Label text="{i18n>BaseInd}" />
                    <t:template>
                        <CheckBox selected="{DataModel>Baseind}" editable="{SizeEditModeModel>/editMode}" select="onSizeChange"  />
                    </t:template>
                </t:Column>
            </c:columns>
            <c:layoutData>
                <FlexItemData growFactor="1" baseSize="0%" />
            </c:layoutData>
        </c:DynamicTable>
    </VBox>
    <!-- </Panel> -->
</core:FragmentDefinition>
