<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" class="sapUiSizeCompact" xmlns:tnt="sap.tnt"
    xmlns:c="zui3derp.control" xmlns:t="sap.ui.table">
    <Panel expandable="true" expanded="false" width="80%" class="sapUiSmallMargin sapUiSizeCompact whiteBackground">

        <headerToolbar>
            <Toolbar height="3rem" style="Clear">
                <Label text="Colors" />
            </Toolbar>
        </headerToolbar>

        <Toolbar height="3rem" style="Clear">
            <ToolbarSpacer />
            <Button type="Ghost" icon="sap-icon://save" text="Save" visible="{ColorEditModeModel>/editMode}" press="onSaveColorTable"/>
            <Button type="Ghost" icon="sap-icon://add" press="addLine" visible="{ColorEditModeModel>/editMode}">
                <customData>
                    <core:CustomData key="TableName" value="colorsTable"/>
                </customData>
            </Button>
            <Button type="Ghost" icon="sap-icon://delete" press="removeLine" visible="{ColorEditModeModel>/editMode}">
                <customData>
                    <core:CustomData key="TableName" value="colorsTable"/>
                </customData>
            </Button>
            <Button type="Ghost" icon="sap-icon://edit" text="Edit" press="setColorEditMode" visible="{= ${ColorEditModeModel>/editMode} === true ? false : true }"/>
            <Button type="Ghost" icon="sap-icon://decline" text="Cancel" press="cancelColorsEdit" visible="{= ${ColorEditModeModel>/editMode} === true ? true : false }"/>
        </Toolbar>

        <MessageStrip id="ColorsMessageStrip" text="" showIcon="true" showCloseButton="true" class="sapUiMediumMarginBottom" type="Error" visible="false"/>
        
        <c:DynamicTable id="colorsTable" rows="{DataModel>/results}" enableColumnReordering="false" minAutoRowCount="5" visibleRowCountMode="Auto" class="sapUiSizeCompact"
            selectionMode="{= ${ColorEditModeModel>/editMode} === true ? 'MultiToggle' : 'None' }">
            <c:columns>
                <t:Column width="11rem" filterProperty="Attribcd">
                    <Label text="Color Code" />
                    <t:template>
                        <HBox class="sapUiResponsiveContentPadding">
                            <Label required="true"/>
                            <Input id="ColorIdInput" value="{DataModel>Attribcd}" editable="{ColorEditModeModel>/editMode}" valueStateText="Required" 
                                change="onColorChange" liveChange="onGeneralAttrChange"/>
                        </HBox>                        
                    </t:template>
                </t:Column>
                <t:Column width="11rem" filterProperty="Desc1" >
                    <Label text="Description" />
                    <t:template>
                        <Input value="{DataModel>Desc1}" editable="{ColorEditModeModel>/editMode}" 
                            change="onColorChange" liveChange="onColorChange"/>
                    </t:template>
                </t:Column>
            </c:columns>
        </c:DynamicTable>
    </Panel>
</core:FragmentDefinition>    