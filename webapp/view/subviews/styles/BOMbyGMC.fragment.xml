<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" class="sapUiSizeCompact" xmlns:tnt="sap.tnt"
    xmlns:c="zui3derp.control" xmlns:t="sap.ui.table">
    <Toolbar height="3rem" style="Clear">
        <Label text="BOM by GMC"/>
        <Button icon="sap-icon://synchronize" press="onRefresh"/>
        <ToolbarSpacer />
        <Button text="Get Components" visible="{BOMbyGMCEditModeModel>/editMode}" press="onGetComponent"/>
        <Button text="RMC" visible="{BOMbyGMCEditModeModel>/editMode}" press="onRMC"/>
        <Button icon="sap-icon://save" text="Save" visible="{BOMbyGMCEditModeModel>/editMode}" press="onSaveBOMbyGMC"/>
        <Button icon="sap-icon://add" press="addLineBOM" visible="{BOMbyGMCEditModeModel>/editMode}">
            <customData>
                <core:CustomData key="TableName" value="bomGMCTable"/>
            </customData>
        </Button>
        <Button icon="sap-icon://delete" press="onDeleteBOMItems" visible="{BOMbyGMCEditModeModel>/editMode}">
            <customData>
                <core:CustomData key="TableName" value="bomGMCTable"/>
            </customData>
        </Button>
        <Button type="Ghost" icon="sap-icon://edit" text="Edit" press="setBOMbyGMCEditMode" visible="{= ${BOMbyGMCEditModeModel>/editMode} === true ? false : true }"/>
        <Button type="Ghost" icon="sap-icon://decline" text="Cancel" press="cancelBOMbyGMCEdit" visible="{= ${BOMbyGMCEditModeModel>/editMode} === true ? true : false }"/>
        <Button icon="sap-icon://excel-attachment" press="onExport"  tooltip="Download to Excel">
            <customData>
            <core:CustomData key="TableName" value="bomGMCTable"/>
            </customData>
            <layoutData>
                <ToolbarLayoutData shrinkable="true"/>
            </layoutData>
        </Button>
    </Toolbar>

    <MessageStrip id="BOMbyGMCMessageStrip" text="" showIcon="true" showCloseButton="true" class="sapUiMediumMarginBottom" type="Error" visible="false"/>

    <c:DynamicTreeTable id="bomGMCTable" class="sapUiSizeCompact" showColumnVisibilityMenu="true" rows="{path:'DataModel>/results', parameters: {arrayNames:['items']}}"
        selectionMode="{= ${BOMbyGMCEditModeModel>/editMode} === true ? 'MultiToggle' : 'None' }">
    </c:DynamicTreeTable>
    
</core:FragmentDefinition>    
