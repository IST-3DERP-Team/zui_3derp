<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" class="sapUiSizeCompact" xmlns:tnt="sap.tnt"
    xmlns:c="zui3derp.control" xmlns:t="sap.ui.table">
    <Toolbar height="3rem" style="Clear">
        <HBox alignContent="Center" alignItems="Center">
            <Label text="Usage Class"/>
            <ComboBox id="UsageClassCB" items="{ValueHelpModel>/usageclasses}" class="sapUiMediumMarginBegin" selectedKey="AUV"
                showSecondaryValues="true" filterSecondaryValues= "true" change="getbomUVTable">
                <core:ListItem key="{ValueHelpModel>Usgcls}" text="{ValueHelpModel>Ucdesc1}" additionalText = "{ValueHelpModel>Usgcls}"/>
            </ComboBox>
        </HBox>
        <ToolbarSpacer />
        <Button icon="sap-icon://save" text="Save" press="onSaveBOMbyUV" visible="{EditModeModel>/bomUVEditMode}"/>
        <Button icon="sap-icon://edit" press="setEditMode">
            <customData>
                <core:CustomData key="Section" value="BOMbyUV"/>
            </customData>
        </Button>
        <!-- <Button text="Refresh" press="getbomUVTable"/> -->
        <Button icon="sap-icon://excel-attachment" press="onExportExcel"  tooltip="Download to Excel">
            <customData>
            <core:CustomData key="TableName" value="bomUVTable"/>
            </customData>
            <layoutData>
                <ToolbarLayoutData shrinkable="true"/>
            </layoutData>
        </Button>
    </Toolbar>
    
    <c:DynamicTable id="bomUVTable" class="sapUiSizeCompact" showColumnVisibilityMenu="true">
    </c:DynamicTable>
</core:FragmentDefinition>    