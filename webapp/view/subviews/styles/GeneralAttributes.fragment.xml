   <VBox fitContainer="true" class="sapUiTinyMargin">
    <MessageStrip id="GeneralAttrMessageStrip" text="" showIcon="true" showCloseButton="true" class="sapUiTinyMarginBottom" type="Error" visible="false" />
    <MessageStrip id="GeneralAttrInfoMessageStrip" text="" showIcon="true" showCloseButton="false" class="sapUiTinyMarginBottom" visible="false" />

    <Toolbar height="2rem" style="Clear">
            <Button id="btnGenAttrInfo" type="Reject" icon="sap-icon://alert" text="Click or hover to show details" tooltip="{UI_MODEL>/genAttrInfo}" press="viewGenAttrInfo" visible="false" />
            <ToolbarSpacer />
            <Button id="btnGenAttrAdd" type="Ghost" icon="sap-icon://add" tooltip="{i18n>Addnewline}" press="addLine" visible="true">
                <customData>
                    <core:CustomData key="TableName" value="generalTable" />
                </customData>
            </Button>
            <Button id="btnGenAttrRemoveRow" type="Ghost" icon="sap-icon://less" tooltip="{i18n>Removenewline}" press="removeNewLine" visible="false">
                <customData>
                    <core:CustomData key="TableName" value="generalTable" />
                </customData>
            </Button>
            <Button id="btnGenAttrEdit" type="Ghost" icon="sap-icon://edit" tooltip="{i18n>Editattributes}" press="setGeneralAttrEditMode" visible="true" />
            <Button id="btnGenAttrDelete" type="Ghost" icon="sap-icon://delete" tooltip="{i18n>Deleteselectedattributes}" press="onDeleteGeneralAttr" visible="true" />
            <Button id="btnGenAttrSave" type="Ghost" icon="sap-icon://save" tooltip="{i18n>Saveattributes}" press="onSaveGeneralTable" visible="false" />
            <Button id="btnGenAttrCancel" type="Ghost" icon="sap-icon://decline" tooltip="{i18n>Canceledit}" press="cancelGeneralAttrEdit" visible="false" />
            <!-- <Button icon="sap-icon://filter" tooltip="{i18n>Filter}" press="onColFilter" >
                <customData>
                    <core:CustomData key="TableName" value="generalTable" />
                </customData>
            </Button> -->
        </Toolbar>

    <!-- General Attributes Table -->
    <!-- <ScrollContainer height="auto" vertical="true" > -->

    <!-- <c:DynamicTable  -->
    <t:Table
        id="generalTable"
        rows="{DataModel>/results}"
        enableColumnReordering="true" 
        enableColumnFreeze="true"
        showColumnVisibilityMenu="true"
        class="sapUiTinyMarginBottom sapUiTinyMarginBegin sapUiTinyMarginEnd"
        selectionMode="MultiToggle"
        width="100%"
        visibleRowCountMode="Auto"
        sort="onSorted"
        
    >
