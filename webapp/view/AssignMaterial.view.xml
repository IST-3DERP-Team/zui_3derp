<mvc:View controllerName="zui3derp.controller.AssignMaterial" xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:u="sap.uxap" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" class="sapUiSizeCompact" xmlns:tnt="sap.tnt"
    xmlns:c="zui3derp.control" xmlns:t="sap.ui.table">
    <Page showHeader="false">
        <!-- <Text text="Sample Run Goes here"></Text> -->
        <Panel>
            <Toolbar height="3rem" style="Clear">
                <Label text="Assign Material No."/>
                <ToolbarSpacer />
                <!-- <Button icon="sap-icon://bookmark" text="Assign Material No."/> -->
                <Button text="Assign Automatic" press="onAssignAutomatic"/>
                <Button text="Create Material" press="onCreateMaterial"/>
                <Button type="Ghost" icon="sap-icon://save" text="Save" press="onSaveMaterialList"/>
                <!-- <Button icon="sap-icon://delete" /> -->
            </Toolbar>
            <c:DynamicTable id="materialListTable" rows="{DataModel>/results}" class="sapUiSizeCompact" showColumnVisibilityMenu="true" height="100%">
                <t:Column width="7rem" filterType="" filterProperty="Attribtyp" sortProperty="Attribtyp">
                    <Label text="GMC"/>
                    <t:template>
                        <Text text="{DataModel>Gmc}"/>
                    </t:template>
                </t:Column>
                <t:Column width="11rem" filterType="" filterProperty="Attribtyp" sortProperty="Attribtyp">
                    <Label text="GMC Desc"/>
                    <t:template>
                        <Text text="{DataModel>Gmcdesc}"/>
                    </t:template>
                </t:Column>
                <t:Column filterType="" filterProperty="Attribtyp" sortProperty="Attribtyp">
                    <Label text="Additional Description"/>
                    <t:template>
                        <Text text="{DataModel>Matdesc1}"/>
                    </t:template>
                </t:Column>
                <t:Column width="5rem" filterType="" filterProperty="Attribtyp" sortProperty="Attribtyp">
                    <Label text="UOM"/>
                    <t:template>
                        <Text text="{DataModel>Uom}"/>
                    </t:template>
                </t:Column>
                <t:Column filterType="" filterProperty="Attribtyp" sortProperty="Attribtyp">
                    <Label text="Material No."/>
                    <t:template>
                        <!-- <Text text="{DataModel>MatNo}"/> -->
                        <Input id="productInput" type="Text" placeholder="Select Material ..." showSuggestion="true" showValueHelp="true"
                            valueHelpRequest="handleValueHelp" suggestionItems="{MaterialsModel>/results}" value="{DataModel>Matno}">
                            <suggestionItems>
                                <core:Item text="{MaterialsModel>MatNo}" />
                            </suggestionItems>
                        </Input>
                    </t:template>
                </t:Column>
            </c:DynamicTable>
        </Panel>
    </Page>
</mvc:View>